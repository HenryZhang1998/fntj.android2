<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_item_text_bg"
    android:padding="@dimen/item_left_tv_padding"
    android:clickable="true"
    android:orientation="vertical" >

    <ScrollView style="@style/match_match" >

        <LinearLayout style="@style/ll_vertical_match_match" >

            <LinearLayout
                style="@style/content_item_white" >
                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_width="200dp"
                    android:textSize="42dp"
                    android:gravity="right|center_horizontal|center_vertical"
                    android:text="关键词：" />

                <EditText
                    android:id="@+id/tbKeyword"
                    style="@style/content_item_rt_tv"
                    android:layout_width="200dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textSize="42dp" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" android:layout_marginBottom="@dimen/item_padding_bottom" />

            <LinearLayout
                style="@style/content_item_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:gravity="center|center_horizontal">
                <Button
                    android:id="@+id/btnvo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/voc"
                    android:text="长按语音识别"
                    android:textSize="42dp"
                    android:gravity="center|center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>