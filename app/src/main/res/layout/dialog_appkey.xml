<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_item_text_bg"
    android:padding="@dimen/item_left_tv_padding"
    android:clickable="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_distance" >

        <TextView
            style="@style/text_huge_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:text="ClientId：" />

        <TextView
            android:id="@+id/tbClientId"
            style="@style/text_huge_black"
            android:textColor="@color/gray_4"
            android:text="123"/>
    </LinearLayout>

    <View style="@style/divider_horizontal_1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_distance" >

        <TextView
            style="@style/text_huge_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/item_left_tv_padding"
            android:text="AppKey：" />

        <EditText
            android:id="@+id/tbAppKey"
            android:layout_width="200dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>