            <View style="@style/divider_horizontal_1px" android:layout_marginBottom="@dimen/item_padding_bottom" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center" >

                <!--style="@style/text_huge_black"
                    android:background="@drawable/button_scan"
                    -->

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/btnCancelNav"
                        android:text="取消"
                        android:textSize="42dp"
                        android:layout_width="240px"
                        android:layout_height="80dp" />

                </LinearLayout>
                <FrameLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_vertical|center_horizontal"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    >

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/btnStartNav"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:lottie_fileName="lottie/54943-button-background.json"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="确认"
                        android:textSize="42dp"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:layout_gravity="center|center_horizontal|center_vertical"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>